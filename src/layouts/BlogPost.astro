---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

import BlogList from '../components/BlogList.astro';

import '../styles/blog.css';
import '../styles/phage.css';

type Props = CollectionEntry<'blog'>['data'];

const { slug, title, pubDate, updatedDate, heroImage, number } = Astro.props;
---

<html lang="ja">
	<head>
		<BaseHead title={title} description="サンプル" />
	</head>

	<body>
		<main>
			<article class="phageWrapper">
				<div class="blogWrapper">
					<slot />
				</div>
			</article>
		</main>
		<p class="text-3xl tracking-widest text-green-600">Test test test</p>
		<BlogList currentId={slug} />
		<Footer />
	</body>
</html>
